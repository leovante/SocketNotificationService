<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1.0-create-notification-table" author="Dmitry Temnikov">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="notification"/>
            </not>
        </preConditions>
        <createTable tableName="notification" remarks="Уведомления">
            <column name="id" type="UUID" remarks="Уникальный идентификатор">
                <constraints primaryKey="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP" remarks="Дата создания">
            </column>
            <column name="updated_at" type="TIMESTAMP" remarks="Дата обновления">
            </column>
            <column name="expired_at" type="TIMESTAMP" remarks="Дата завершения">
            </column>
            <column name="body" type="VARCHAR(512)" remarks="Сообщение уведомления">
            </column>
            <column name="header" type="VARCHAR(512)" remarks="Заголовок уведомления">
            </column>
            <column name="href" type="VARCHAR(512)" remarks="Ссылка">
            </column>
            <column name="kafka_dt" type="TIMESTAMP" remarks="Дата создания из kafka">
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1.0-create-notification-roles-table" author="Dmitry Temnikov">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="notification_roles"/>
            </not>
        </preConditions>
        <createTable tableName="notification_roles" remarks="Уведомления">
            <column name="notification_id" type="UUID" remarks="Идентификатор уведомления">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_notification_role"/>
            </column>
            <column name="role" type="VARCHAR(100)" remarks="Роль">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_notification_role"/>
            </column>
            <column name="role_type" type="VARCHAR(100)" remarks="Тип роли">
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1.0-create-notification-user-success-table" author="Dmitry Temnikov">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="notification_user_success"/>
            </not>
        </preConditions>
        <createTable tableName="notification_user_success" remarks="Уведомления">
            <column name="notification_id" type="UUID" remarks="Идентификатор уведомления">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_notification_email"/>
            </column>
            <column name="email" type="VARCHAR(100)" remarks="Почта">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_notification_email"/>
            </column>
            <column name="read_at" type="timestamp" remarks="Дата прочтения">
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1.0-create-invalid-notifications-table" author="Dmitry Temnikov">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="invalid_notifications"/>
            </not>
        </preConditions>
        <createTable tableName="invalid_notifications" remarks="Ошибки уведомлений">
            <column name="id" type="UUID" remarks="Уникальный идентификатор">
                <constraints primaryKey="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP" remarks="Дата создания">
            </column>
            <column name="updated_at" type="TIMESTAMP" remarks="Дата обновления">
            </column>
            <column name="raw_message" type="VARCHAR(8092)" remarks="Сообщение">
            </column>
            <column name="error_message" type="VARCHAR(8092)" remarks="Сообщение ошибки">
            </column>
        </createTable>
    </changeSet>

    <changeSet id="1.0-add-notification-index" author="Dmitry Temnikov">
        <createIndex indexName="notification-created_at-idx" tableName="notification">
            <column name="created_at"/>
        </createIndex>
    </changeSet>

    <changeSet id="1.0-add-notification-roles-index" author="Dmitry Temnikov">
        <createIndex indexName="notification-roles-notification-id-idx" tableName="notification_roles">
            <column name="notification_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="1.0-add-notification-user-success-index" author="Dmitry Temnikov">
        <createIndex indexName="notification-user-success-notification-id-idx" tableName="notification_user_success">
            <column name="notification_id"/>
        </createIndex>
        <createIndex indexName="notification-user-success-email-idx" tableName="notification_user_success">
            <column name="email"/>
        </createIndex>
    </changeSet>

    <changeSet id="1.0-add-invalid-notifications-index" author="Dmitry Temnikov">
        <createIndex indexName="invalid-notifications-created_at-idx" tableName="invalid_notifications">
            <column name="created_at"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
